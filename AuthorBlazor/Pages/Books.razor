@page "/Books"
@using Domain.Models
@using UIElements
@using AuthorBlazor.HttpService
@inject NavigationManager NavMgr
@inject HttpService _httpService;

<h3>Books</h3>

<div class="filterbar">
    <div class="filterscontainer">
        <img src="img/@(doShowFilters?"clear_" : "")funnel.png" 
        class="funnel" 
        @onclick="OpenCloseFilters"/>
        
        @if (doShowFilters)
        {
            <div class="filter">
                <div>
                    <label>Owner ID:</label>
                </div>
                <div>
                    <input type="number" 
                    class="owneridfield" 
                    @oninput="async args => await UpdateOwnerFilter(args)" 
                    min="0" value="0"/>
                </div>
            </div>
            <div class="filter">
                <div>
                    <label style="text-align: center">Is completed?</label>
                </div>
                <div>
                    <select class="completedstatusfield" 
                    @onchange="async args => await UpdateCompletedStatusFilter(args)">
                        <option value="all">all</option>
                        <option value="true">true</option>
                        <option value="false">false</option>
                    </select>
                </div>
            </div>
        }
    </div>
</div>

@if (booksToShow == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else if (!booksToShow.Any())
{
    <p>
        <em>No ToDo items exist. Please remove filter or add new books.</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Owner ID</th> <th>Book ID</th> <th>Title</th> <th>Completed?</th> <th>Edit</th> <th>Remove</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in booksToShow)
        {
            <tr>
                <td>@item.OwnerId</td>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>
                    <Toggle IsCompleted="@item.IsCompleted" Callback="@(b => ToggleStatus(b, item))"/>
                </td>
                <td>
                    <img src="img/edit.gif" class="funnel" @onclick="@(() => ShowEdit(item))"/>
                </td>                
                <td>
                    <label
                        @onclick="@(() => RemoveBook(item.Id))"
                        style="cursor:pointer; color: red; font-weight: bold">
                        &#x2717;
                    </label>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
@if (!string.IsNullOrEmpty(errorLabel))
{
    <label style="color: red">@errorLabel</label>
}
@if (showModal)
{
    <Modal>
        <h3>Edit Category</h3>
        <hr/>
        <div style="margin-bottom: 5px">
            <label style="font-weight: bold">Book Title</label>
        </div>
        <div style="margin-bottom: 5px">
            <textarea style="width: 20ch; border-radius: 10px; padding: 3px;" @bind="@editedTitle"/>
        </div>
        <div style="margin-bottom: 5px">
            <label style="font-weight: bold">Owner</label>
        </div>
        <div style="margin-bottom: 5px">
            <input type="number" min="0" style="width: 10ch; border-radius: 10px; padding: 3px; text-align: center" @bind="@editedOwner"/>
        </div>
        @if (!string.IsNullOrEmpty(editErrorLabel))
        {
            <div>
                <label style="color:red">@editErrorLabel</label>
            </div>
        }
        <div style="margin-top: 15px">
            <button style="margin-right: 10px" @onclick="AcceptEdit">Accept</button>
            <button style="margin-left: 10px" @onclick="@(() => showModal = false)">Cancel</button>
        </div>
    </Modal>
}

@code {
    private string errorLabel = "";
    private Book newBook = new();
    private Author author = new ();
    private List<Author> authors;
    private List<Book> allBooks, booksToShow;
    private bool showModal;
    
    // filtering feature
    private string? authorsFirstNameFilter;
    private string? bookTitleFilter;
    private bool doShowFilters;
    
    protected override async Task OnInitializedAsync()
    {
        allBooks = await _httpService.GetAllBooks();
        authors = await _httpService.GetAllAuthors();
        booksToShow = allBooks;
        OpenCloseFilters();
        authorsFirstNameFilter = "";
        await ApplyFilters();
    }

    private async Task RemoveBook(int id)
    {
        errorLabel = "";
        try
        {
    // var bookToRemove = books.First(book => book.Id == id);
    // books.Remove(bookToRemove);
            await BookHomeOrDaoOrRep.DeleteAsync(id);
            booksToShow = await BookHomeOrDaoOrRep.GetAsync();
        }
        catch (Exception e)
        {
            errorLabel = e.Message;
        }
    }

    private async Task ToggleStatus(bool status, Book book)
    {
        errorLabel = "";
        book.IsCompleted = status;
        try
        {
            await BookHomeOrDaoOrRep.UpdateAsync(book);
        }
        catch (Exception e)
        {
            errorLabel = e.Message;
        }
    }

    private void OpenCloseFilters()
    {
        doShowFilters = !doShowFilters;
        if (!doShowFilters)
        {
            authorsFirstNameFilter = null;
            bookTitleFilter = null;
            booksToShow = allBooks;
        }
    }
    
    // async, because it calls ApplyFilters() method, which is async too. If we didn't add "async" here,
    // then there occurs a data mismatch when fetching it from the database by calling ApplyFilters();
    private async Task UpdateOwnerFilter(ChangeEventArgs args)
    {
        string? value = (string) args.Value!;
        if (string.IsNullOrEmpty(value))
        {
            authorsFirstNameFilter = null;
            await ApplyFilters();
            return;
        }

        int idFilter = int.Parse(value);
        if (idFilter < 0)
        {
            return;
        }

        authorsFirstNameFilter = idFilter;
        await ApplyFilters();
    }

    private async Task UpdateCompletedStatusFilter(ChangeEventArgs args)
    {
        string value = (string) args.Value;

        try
        {
            bookTitleFilter = bool.Parse(value);
        }
        catch (Exception e)
        {
            bookTitleFilter = null;
        }
        await ApplyFilters();
    }
    
    private async Task ApplyFilters()
    {
        //booksToShow =  await BookHomeOrDaoOrRep.GetAsync(authorsFirstNameFilter, bookTitleFilter);
        
         booksToShow = allBooks;
         if (bookTitleFilter != null) booksToShow = booksToShow.Where(book => book.Title.Equals(bookTitleFilter)).ToList();
         if (authorsFirstNameFilter != null) booksToShow = booksToShow.Where(book => book.OwnerId == authorsFirstNameFilter).ToList();
        
        foreach (Book book in booksToShow)
        {
            Console.WriteLine(book.ToString());
        }
    }
    
    private void Edit(int itemId)
    {
        navMgr.NavigateTo($"EditBook/{itemId}");
    }
    
    private async Task AcceptEdit()
    {
        try
        {
            Book updated = new()
            {
                Id = bookToEdit.Id,
                Title = editedTitle,
                IsCompleted = bookToEdit.IsCompleted,
                OwnerId = editedOwner
            };
            await BookHomeOrDaoOrRep.UpdateAsync(updated);
            bookToEdit.Title = updated.Title;
            bookToEdit.OwnerId = updated.OwnerId;
            showModal = false;
        }
        catch (Exception e)
        {
            editErrorLabel = e.Message;
        }
    }
}